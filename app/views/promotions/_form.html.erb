<% if promotion.errors.any? %>
  Erros: <%= promotion.errors.full_messages.join(', ') %>
<% end %>
<%= form_with(model: promotion, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name,class:'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description, 'Descrição' %>
    <%= form.text_area :description,class:'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :code, 'Código' %>
    <%= form.text_field  :code %>
  </div>
  <div class="form-group">
    <%= form.label :discount_rate, 'Desconto' %>
    <%= form.text_field :discount_rate %>
  </div>
  <div class="form-group">
    <%= form.label :coupon_quantity, 'Quantidade de cupons' %>
    <%= form.text_field  :coupon_quantity %>
  </div>
  <div class="form-group">
    <%= form.label :expiration_date, 'Data de término' %>
    <%= form.date_field  :expiration_date %>
  </div>

  <div class="actions">
    <%= form.submit button_submit, class: 'btn btn-primary' %>
  </div>
<% end %>